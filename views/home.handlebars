<main>
    <section class="tarefas">
        {{#each tarefas}}
        <div class="tarefa">
            <form action="">
                <div>
                    <input type="checkbox" id="tarefa-{{this.id}}">
                    <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                </div>
                <button>
                    <img src="/imagens/x.png" alt="icone de x para excluir uma tarefa">
                </button>
            </form>
        </div>
        {{/each}}
        <div class="informacoes">
            <p>5 tarefa ativa</p>
            <div class="botoes">
                <a href="" class="active">todas</a>
                <a href="">ativas</a>
                <a href="">completas</a>
            </div>
            <a href="">Limpar Tarefa</a>
        </div>
    </section>

    <section class="botoes">
        <a href="" class="active">todas</a>
        <a href="">ativas</a>
        <a href="">completas</a>
    </section>
</main>