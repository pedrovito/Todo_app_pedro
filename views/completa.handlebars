<main>
    <section class="tarefas">
        {{#each tarefas}}
        <div class="tarefa">
            <form action="">
                
               <div class="completa">
                    <input type="checkbox"  id="tarefa-{{this.id}}" checked onchange="descompletarTarefa({{this.id}})">
                    <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                </div>

                <button>
                    <img src="/imagens/x.png" alt="icone de x para excluir uma tarefa">
                </button>
            </form>
        </div>
        {{/each}}
        <div class="informacoes">
            <p>{{quantidadeTarefas}} tarefa ativa</p>
            <div class="botoes">
                <a href="/" >todas</a>
                <a href="/ativas">ativas</a>
                <a href="/completas" class="active">completas</a>
            </div>
            <a href="">Limpar Tarefa</a>
        </div>
    </section>

    <section class="botoes">
        <a href="/" >todas</a>
        <a href="/ativas">ativas</a>
        <a href="/completas" class="active" >completas</a>
    </section>
</main>